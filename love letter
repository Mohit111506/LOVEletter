<!-- MUSIC -->
<audio id="music" loop>
  <source src="https://docs.google.com/uc?export=download&id=1aiODr5Ty4-2P6VahcqvTknmbM5Swt7Er" type="audio/mpeg">
</audio>

<script>
const envelope=document.getElementById("envelope");
const music=document.getElementById("music");
const lines=document.querySelectorAll(".line");

function openLetter(){
  envelope.classList.add("open");
  music.play(); // ‚úÖ Song starts on OPEN button click
  lines.forEach(l=>l.classList.remove("show"));
  lines.forEach((line,i)=>{
    setTimeout(()=>line.classList.add("show"), i*700);
  });
}

function closeLetter(){
  envelope.classList.remove("open");
  music.pause(); // ‚úÖ Song stops on CLOSE
  music.currentTime=0;
  lines.forEach(l=>l.classList.remove("show"));
}

/* HEARTS */
const hearts=document.getElementById("hearts");
for(let i=0;i<30;i++){
  const h=document.createElement("div");
  h.className="heart";
  h.style.left=Math.random()*100+"%";
  h.style.animationDuration=10+Math.random()*10+"s";
  h.style.opacity=Math.random();
  hearts.appendChild(h);
}
</script>

